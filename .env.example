# ==========================================
# Flask Web Application Configuration
# ==========================================

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production-use-strong-random-string
HOST=0.0.0.0
PORT=5000

# Session Configuration
SESSION_LIFETIME_HOURS=24
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ==========================================
# Database Configuration
# ==========================================
# Database files are stored in the data/ directory
DATABASE_FILE=data/app_database.db
DATABASE_URL=sqlite:///./data/app.db
STORAGE_FILE=data/queries_data.json

# ==========================================
# File Upload Configuration
# ==========================================

UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=50  # MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,png,jpg,jpeg

# ==========================================
# API Server Configuration
# ==========================================

API_HOST=0.0.0.0
API_PORT=5001
API_KEY=your_api_key

# ==========================================
# ColiVara Services Configuration
# ==========================================

# ColiVara RAG API
COLIVARA_URL=http://localhost:8001
COLIVARA_API_VERSION=v1

# Embedding Service
EMBEDDING_URL=http://localhost:8000

# MinIO Object Storage
MINIO_URL=http://localhost:9000
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=colivara
MINIO_SECURE=false

# PostgreSQL Vector Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=colivara
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ==========================================
# Ollama Configuration (Local LLM)
# ==========================================

OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5vl:32b
OLLAMA_TIMEOUT=120

# ==========================================
# LLM Provider API Keys (Optional)
# ==========================================

# OpenAI
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-4o

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229

# OpenRouter (Multi-provider)
OPENROUTER_API_KEY=
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# ==========================================
# RAG Configuration
# ==========================================

DEFAULT_COLLECTION=my_collection
MAX_ADDITIONAL_PAGES=1
SIMILARITY_THRESHOLD=0.25
INCLUDE_NEXT_PAGE=false
ALLOW_GENERAL_FALLBACK=true

# ==========================================
# Security Settings
# ==========================================

MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30  # minutes
MIN_PASSWORD_LENGTH=8
MIN_USERNAME_LENGTH=3
REQUIRE_EMAIL_VERIFICATION=false

# ==========================================
# Logging Configuration
# ==========================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==========================================
# Application Settings
# ==========================================

APP_NAME=ColiVara Document Q&A
APP_VERSION=2.0.0
ENABLE_METRICS=false
ENABLE_CORS=true

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Thread Pool Configuration
MAX_WORKERS=10
QUERY_TIMEOUT=300  # seconds

# Rate Limiting
RATELIMIT_ENABLED=False
RATELIMIT_DEFAULT=100 per hour
